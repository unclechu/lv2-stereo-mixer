@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix pg: <http://ll-plugins.nongnu.org/lv2/ext/portgroups#>.
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

@prefix p: <https://github.com/unclechu/lv2-stereo-mixer>.

p:in a pg:StereoGroup.
p:out a pg:StereoGroup.
p:
	a lv2:Plugin, lv2:MixerPlugin;
	lv2:binary <stereo-mixer.so>;
	doap:name "Stereo Mixer";
	doap:maintainer [ foaf:name "Viacheslav Lotsmanov"; ];
	doap:license <http://usefulinc.com/doap/licenses/lgpl>;

	lv2:port [
		a lv2:AudioPort, lv2:InputPort;
		lv2:index 0;
		lv2:symbol "input_l";
		lv2:name "Left input";
		pg:membership [
			pg:group p:in;
			pg:role pg:leftChannel;
		];
	], [
		a lv2:AudioPort, lv2:InputPort;
		lv2:index 1;
		lv2:symbol "input_r";
		lv2:name "Right input";
		pg:membership [
			pg:group p:in;
			pg:role pg:rightChannel;
		];
	], [
		a lv2:AudioPort, lv2:OutputPort;
		lv2:index 2;
		lv2:symbol "output_l";
		lv2:name "Left output";
		pg:membership [
			pg:group p:out;
			pg:role pg:leftChannel;
		];
	], [
		a lv2:AudioPort, lv2:OutputPort;
		lv2:index 3;
		lv2:symbol "output_r";
		lv2:name "Right output";
		pg:membership [
			pg:group p:out;
			pg:role pg:rightChannel;
		];
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 4;
		lv2:symbol "gain_in_l";
		lv2:name "Gain Input L (dB)";
		lv2:minimum -90;
		lv2:maximum 12;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 5;
		lv2:symbol "gain_in_r";
		lv2:name "Gain Input R (dB)";
		lv2:minimum -90;
		lv2:maximum 12;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 6;
		lv2:symbol "gain_in_both";
		lv2:name "Gain Input Both (dB)";
		lv2:minimum -90;
		lv2:maximum 12;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 7;
		lv2:symbol "wide";
		lv2:name "Wide (%)";
		lv2:minimum 0;
		lv2:maximum 100;
		lv2:default 100;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 8;
		lv2:symbol "wide_law";
		lv2:name "Wide law (dB)";
		lv2:minimum -90;
		lv2:maximum 12;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 9;
		lv2:symbol "pan";
		lv2:name "Pan";
		lv2:minimum -100;
		lv2:maximum 100;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 10;
		lv2:symbol "pan_law";
		lv2:name "Pan law (dB)";
		lv2:minimum -30;
		lv2:maximum 12;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 11;
		lv2:symbol "pan_gain_compensation";
		lv2:name "Pan gain compensation (boost)";
		lv2:portProperty lv2:toggled;
		lv2:minimum 0;
		lv2:maximum 1;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 12;
		lv2:symbol "gain_out_l";
		lv2:name "Gain Output L (dB)";
		lv2:minimum -90;
		lv2:maximum 12;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 13;
		lv2:symbol "gain_out_r";
		lv2:name "Gain Output R (dB)";
		lv2:minimum -90;
		lv2:maximum 12;
		lv2:default 0;
	], [
		a lv2:ControlPort, lv2:InputPort;
		lv2:index 14;
		lv2:symbol "gain_out_both";
		lv2:name "Gain Output Both (dB)";
		lv2:minimum -90;
		lv2:maximum 12;
		lv2:default 0;
	].
